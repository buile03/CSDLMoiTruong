@using TechLife.CSDLMoiTruong.App.Extensions
@model TechLife.CSDLMoiTruong.Model.TinhHinhGayHaiCayTrong.TinhHinhGayHaiCayTrongGetPaging
@{
    ViewData["Title"] = "Danh sách tình hình gây hại cây trồng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="widget-grid">
    <div class="row">
        <article class="col-12">
            <div class="jarviswidget" id="wid-id-groups" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false">
                <header>
                    <span class="widget-icon"><i class="fa fa-leaf"></i></span>
                    <h2>@ViewData["Title"]</h2>
                </header>
                <div>
                    <div class="widget-body">
                        <form method="get">
                            <div class="padding-bottom-10">
                                <div class="row align-items-end g-2">
                                    <div class="col-md-6">
                                        <label class="form-label">Từ khóa tìm kiếm:</label>
                                        <div class="input-group input-group-sm">
                                            <input class="form-control" asp-for="Keyword" autocomplete="off" placeholder="Nhập từ khóa tìm kiếm...">
                                            <button class="btn btn-primary" type="submit">
                                                <i class="fa fa-search"></i> Tìm kiếm
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">Sinh vật gây hại:</label>
                                        <select class="form-select form-select-sm" asp-for="SinhVatGayHaiId" asp-items="@ViewBag.SinhVatGayHaiItems">
                                            <option value="0">Chọn sinh vật gây hại</option>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">Địa bàn ảnh hưởng:</label>
                                        <select class="form-select form-select-sm" asp-for="DiaBanAnhHuongId" asp-items="@ViewBag.DiaBanItems">
                                            <option value="0">Chọn địa bàn ảnh hưởng</option>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">Mức độ nhiễm:</label>
                                        <select class="form-select form-select-sm" asp-for="MucDoNhiem" asp-items="@ViewBag.MucDoNhiemItems">
                                            <option value="0">Chọn mức độ nhiễm</option>
                                        </select>
                                    </div>
                                    <div class="col-md-12 text-end">
                                        <button type="button" title="Thêm tình hình gây hại" data-link="@Context.Request.GetRawUrl("/TinhHinhGayHaiCayTrong/List/")" data-url="/TinhHinhGayHaiCayTrong/Create/" data-toggle="modal" data-target="#modal" data-type="modal-lg" class="btn btn-success btn-sm popup">
                                            <i class="fa fa-plus-circle"></i> Thêm mới
                                        </button>
                                        <button type="button" title="Import Excel" data-link="@Context.Request.GetRawUrl("/TinhHinhGayHaiCayTrong/List/")" data-url="/TinhHinhGayHaiCayTrong/ImportExcel/" data-toggle="modal" data-target="#modal" class="btn btn-info btn-sm popup">
                                            <i class="fa fa-upload"></i> Import
                                        </button>
                                        <button type="button" title="Export Excel" onclick="exportExcel()" class="btn btn-warning btn-sm">
                                            <i class="fa fa-download"></i> Export
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div id="box-content"></div>
                        </form>
                    </div>
                </div>
            </div>
        </article>
    </div>
</section>


@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            let element = document.getElementById('box-content');
            loadContent('@Html.Raw(Context.Request.GetRawUrl("/TinhHinhGayHaiCayTrong/List/"))', element);
            $("#MucDoNhiem").on("change", function () {
                this.form.submit()
            });
             $("#DiaBanAnhHuongId").on("change", function () {
                this.form.submit()
            });
             $("#SinhVatGayHaiId").on("change", function () {
                this.form.submit()
            });
            pageSetUp();
        });
        function exportExcel() {
            var sinhVatGayHaiId = $('#SinhVatGayHaiId').val();
            var diaBanId = $('#DiaBanAnhHuongId').val();
            var mucDoNhiem = $('#MucDoNhiem').val();
            var keyword = $('#Keyword').val();

            if (sinhVatGayHaiId === "0") sinhVatGayHaiId = null;
            if (diaBanId === "0") diaBanId = null;
            if (mucDoNhiem === "0") mucDoNhiem = null;

            var form = document.createElement('form');
            form.method = 'POST';
            form.action = '/TinhHinhGayHaiCayTrong/ExportExcel';

            var inputSinhVat = document.createElement('input');
            inputSinhVat.type = 'hidden';
            inputSinhVat.name = 'SinhVatGayHaiId';
            inputSinhVat.value = sinhVatGayHaiId;
            form.appendChild(inputSinhVat);

            var inputDiaBan = document.createElement('input');
            inputDiaBan.type = 'hidden';
            inputDiaBan.name = 'DiaBanAnhHuongId';
            inputDiaBan.value = diaBanId;
            form.appendChild(inputDiaBan);

            var inputMucDo = document.createElement('input');
            inputMucDo.type = 'hidden';
            inputMucDo.name = 'MucDoNhiem';
            inputMucDo.value = mucDoNhiem;
            form.appendChild(inputMucDo);

            var inputKeyword = document.createElement('input');
            inputKeyword.type = 'hidden';
            inputKeyword.name = 'Keyword';
            inputKeyword.value = keyword;
            form.appendChild(inputKeyword);

            var token = document.createElement('input');
            token.type = 'hidden';
            token.name = '__RequestVerificationToken';
            token.value = $('input[name="__RequestVerificationToken"]').val();
            form.appendChild(token);

            document.body.appendChild(form);
            form.submit();
        }
    </script>
}