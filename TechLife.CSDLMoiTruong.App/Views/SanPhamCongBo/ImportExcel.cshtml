@model TechLife.CSDLMoiTruong.Model.SanPhamCongBo.ImportExcelRequest
@using TechLife.CSDLMoiTruong.Common;
<div class="modal-content">
    <form id="modal-form" enctype="multipart/form-data">
        <div class="modal-header">
            <h4 class="modal-title">Import danh sách sản phẩm từ Excel</h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="alert alert-info">
                <strong>Hướng dẫn:</strong>
                <ul>
                    <li>Tải file mẫu <a href="/SanPhamCongBo_Template.xlsx" download>Tại đây</a></li>
                    <li>Chỉ import file Excel (.xlsx) theo đúng định dạng mẫu</li>
                    <li>Dữ liệu bắt đầu từ dòng 2, dòng 1 là tiêu đề</li>
                    <li>Có thể để trống đơn vị công bố và cập nhật sau</li>
                </ul>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label">Chọn file Excel</label> <span class="text-danger">(*)</span>
                        <input type="file" asp-for="File" class="form-control" accept=".xlsx" required />
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="mb-3">
                        <label asp-for="DonViCongBoId" class="form-label">Đơn vị công bố (có thể để trống)</label>
                        <select asp-for="DonViCongBoId" asp-items="ViewBag.DonViCongBoItems" class="form-select">
                            <option value="">-- Không chọn đơn vị --</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            @Html.AntiForgeryToken()
            <button type="button" data-bs-dismiss="modal" class="btn btn-secondary">Đóng</button>
            <button type="submit" class="btn btn-primary">Import</button>
        </div>
    </form>
    @{
        await Html.RenderPartialAsync("_ModalScript",
        new TechLife.CSDLMoiTruong.App.Models.ModalFormRequest()
            {
                FormId = "modal-form",
                UrlSubmit = "/SanPhamCongBo/ImportExcel",
                UrlPathLoadData = Context.Request.Query["resultUrl"],
                LoadDataId = "box-content"
            });
    }
</div>