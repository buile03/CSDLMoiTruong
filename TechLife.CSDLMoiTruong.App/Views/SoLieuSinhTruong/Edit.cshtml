@model TechLife.CSDLMoiTruong.Model.SoLieuSinhTruong.SoLieuSinhTruongUpdateRequest
@using TechLife.CSDLMoiTruong.Common;
<div class="modal-content">
    <form id="modal-form" enctype="multipart/form-data">
        <div class="modal-header">
            <h4 class="modal-title">Sửa thông tin số liệu sinh trưởng</h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
            </button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label asp-for="CayTrongId" class="form-label"></label> <span class="text-danger">(*)</span>
                        <select asp-for="CayTrongId" asp-items="ViewBag.LoaiCayTrongItems" class="form-select" style="width:100%">
                            <option value="0">Vui lòng chọn</option>
                        </select>
                        <span asp-validation-for="CayTrongId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="TuNgay" class="form-label"></label> <span class="text-danger">(*)</span>
                        <input type="date" asp-for="TuNgay" class="form-control" autocomplete="off" />
                        <span asp-validation-for="TuNgay" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="DenNgay" class="form-label"></label> <span class="text-danger">(*)</span>
                        <input type="date" asp-for="DenNgay" class="form-control" autocomplete="off" />
                        <span asp-validation-for="DenNgay" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="KeHoach" class="form-label"></label> <span class="text-danger">(*)</span>
                        <input type="number" step="0.01" asp-for="KeHoach" class="form-control" autocomplete="off" />
                        <span asp-validation-for="KeHoach" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="DaGieoTrong" class="form-label"></label> <span class="text-danger">(*)</span>
                        <input type="number" step="0.01" asp-for="DaGieoTrong" class="form-control" autocomplete="off" />
                        <span asp-validation-for="DaGieoTrong" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="mb-3">
                        <label asp-for="MoTa" class="form-label"></label>
                        <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="button" data-bs-dismiss="modal" class="btn btn-secondary">Đóng</button>
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </form>
    @{
        await Html.RenderPartialAsync("_ModalScript",
        new TechLife.CSDLMoiTruong.App.Models.ModalFormRequest()
            {
                FormId = "modal-form",
                UrlSubmit = "/SoLieuSinhTruong/Edit",
                UrlPathLoadData = Context.Request.Query["resultUrl"],
                LoadDataId = "box-content"
            });
    }
</div>